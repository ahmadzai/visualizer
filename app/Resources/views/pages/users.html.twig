{% extends 'template.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">List of all registered users!</h3>
                    <a href="{{ path("fos_user_registration_register") }}" class="btn btn-sm btn-info pull-right">
                        <i class="fa fa-plus"></i> New User
                    </a>
                </div>
                <!-- /.box-header -->
                {#{% for label, messages in app.flashes %}#}
                    {#{% for message in messages %}#}

                        {#{{ message }}#}

                    {#{% endfor %}#}
                {#{% endfor %}#}
                <div class="box-body">

                    {% for label, messages in app.flashes %}
                        {% for message in messages %}
                            <div class="alert alert-{{ label }} alert-dismissible">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                                <i class="icon fa fa-check"></i>
                                    {{ message }}
                            </div>
                        {% endfor %}
                    {% endfor %}

                    <table id="users" class="table table-bordered table-striped">
                        <thead>
                        <tr>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Roles</th>
                            <th>Level</th>
                            <th>Position</th>
                            <th>Province</th>
                            <th>Mobile</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for user in users %}
                        <tr>
                            <td>{{ user.username }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.roles|join(' | ') }}</td>
                            <td>{{ user.level }}</td>
                            <td>{{ user.position }}</td>
                            <td>{% if user.province %}{{ user.province.provinceName }} {% endif %}</td>
                            <td>{{ user.mobileNumber }}</td>
                            <td>
                                <a href="{{ path('users_edit', {'id':user.id}) }}" class="btn btn-xs btn-info"><i class="fa fa-edit"></i> Edit </a>
                            </td>
                        </tr>
                        {% endfor %}

                        </tbody>
                        {#<tfoot>#}
                        {#<tr>#}
                            {#<th>Rendering engine</th>#}
                            {#<th>Browser</th>#}
                            {#<th>Platform(s)</th>#}
                            {#<th>Engine version</th>#}
                            {#<th>CSS grade</th>#}
                        {#</tr>#}
                        {#</tfoot>#}
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
        </div>
    </div>
{% endblock %}

{% block breadcrumb %}
    <h1>
        List
        <small> of Registered Users</small>
    </h1>
    <ol class="breadcrumb">

        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
            {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
            {#<li class="active"><i class="fa fa-user"></i>#}
            {#<a href="{{ path('fos_user_security_logout') }}">#}
            {#{{ 'layout.logout'|trans({}, 'FOSUserBundle') }}#}
            {#</a>#}
            {#</li>#}
            <li>
                <a href="{{ path('fos_user_security_logout') }}">
                    <i class="fa fa-sign-out"></i>
                    Logout
                </a>
            </li>
        {% else %}
            <li>
                <a href="{{ path('fos_user_security_login') }}">
                    <i class="fa fa-sign-in"></i>
                    {{ 'layout.login'|trans({}, 'FOSUserBundle') }}
                </a>
            </li>

        {% endif %}

    </ol>
{% endblock %}
{% block ccs %}

    <link rel="stylesheet" href="{{ asset('template/bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css')}}">
    {{ parent() }}
{% endblock %}
{% block js %}
    {{ parent() }}
    <script src="{{ asset('template/bower_components/datatables.net/js/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('template/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js') }}"></script>
    <script>
        $(function () {
            //Initialize Select2 Elements
            $('#users').dataTable({
                "pageLength": 15,
                "lengthMenu": [ [15, 25, 50, -1], [15, 25, 50, "All"] ]
            });
        })
    </script>
{% endblock %}